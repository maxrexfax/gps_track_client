<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorForBackgroundMainActivity"
    tools:context="com.example.gps_tracker.EditActivity"
    android:padding="15dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center"
        android:text="@string/tv_editact_label_header"/>
    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_editact_label_coord"/>
    <TextView
        android:id="@+id/tvEditActLatitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lat"/>
    <TextView
        android:id="@+id/tvEditActLongtitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lon"/>
    <TextView
        android:id="@+id/tvEditActTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time"/>
    <EditText
        android:id="@+id/etEditActDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorForBackgroundEt"
        android:maxLines="5"
        android:minEms="10"
        android:text="Description" />
    <Button
        android:id="@+id/btnEditActSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:onClick="onClickEditAct"/>
</LinearLayout>
